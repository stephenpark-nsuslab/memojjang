# Django 기본 설정
# SECURITY WARNING: 프로덕션에서는 반드시 강력한 시크릿 키로 변경하세요!
DJANGO_SECRET_KEY=your-super-secret-key-here

# 개발환경에서는 True, 프로덕션에서는 False
DJANGO_DEBUG=True

# 허용된 호스트 목록 (쉼표로 구분)
# 개발: localhost,127.0.0.1
# 프로덕션: yourdomain.com,www.yourdomain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# === 프로덕션 전용 설정 ===
# 프로덕션 배포시 아래 주석을 해제하고 적절히 설정하세요

# HTTPS 리다이렉트 (프로덕션에서 권장)
# SECURE_SSL_REDIRECT=True

# 프록시 서버 사용시 (예: Nginx, CloudFlare)
# USE_X_FORWARDED_PROTO=True

# HSTS 보안 헤더 설정 (초 단위, 1년 = 31536000)
# SECURE_HSTS_SECONDS=31536000

# === 데이터베이스 설정 (선택사항) ===
# PostgreSQL 사용시 (프로덕션 권장)
# DATABASE_URL=postgres://username:password@localhost:5432/memojjang

# MySQL 사용시
# DATABASE_URL=mysql://username:password@localhost:3306/memojjang

# === 외부 서비스 설정 (선택사항) ===
# Sentry 오류 추적 (프로덕션 권장)
# SENTRY_DSN=https://your-sentry-dsn-here

# 이메일 설정 (비밀번호 재설정 등)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True